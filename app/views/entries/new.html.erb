<h1>New Entry</h1>

<form action="/entries" method="post" enctype="multipart/form-data">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">
  <div class="mb-3">
    <label class="form-label" for="title_input">Title</label>
    <input class="form-control" type="text" name="title" id="title_input">
  </div>

  <div class="mb-3">
    <label class="form-label"for="description_input">Description</label>
    <input class="form-control" type="text" name="description" id="description_input">
  </div>

  <div class="mb-3">
    <label class="form-label" for="occurred_on_input">Occurred On</label>
    <input class="form-control" type="date" name="occurred_on" id="occurred_on_input">
  </div>

  <div class="mb-3">
    <label class="form-label" for="uploaded_image_input" >Upload Image</label>
    <input class="form-control" type="file" name="uploaded_image" id="uploaded_image_input" accept= "image/png, image/jpg, image/jpeg, image/gif">
  </div>

  <p>
    <button class="btn btn-primary">Save</button>
  </p>
  
  <p>
    <a class="btn btn-danger" href="/places/<%=params["place_id"]%>" role="button">Cancel</a>
  <p>
</form>